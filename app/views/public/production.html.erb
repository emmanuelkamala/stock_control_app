<%= render 'layouts/navigation' %>
<div class="row">
  <div class="col-2 text-center mt-2">
    <%= render 'layouts/sidebar' %>
  </div>

  <div class="col-9 mt-5">
    <h3 class="display-6">Summary</h3>
    <div class="row">
   
    <div class="card mt-3">
      <h4 class="p-4">Production Stats in the last 30 days</h4>
      <%= column_chart Flock.group_by_day(:created_at).count %>
    </div>

    <div class="card mt-5">
      <h4 class="p-4">Production Stats grouped by month</h4>
      <%= column_chart Flock.group_by_month(:created_at).count %>
    </div>
  <div>
</div>
